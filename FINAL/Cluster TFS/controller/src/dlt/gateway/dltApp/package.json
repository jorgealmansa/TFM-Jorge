{
    "name": "dlt_gateway",
    "version": "1.0.0",
    "description": "A DLT application that record and manages network related data as JSON, implemented in typeScript using HLF fabric-gateway",
    "main": "dist/index.js",
    "typings": "dist/index.d.ts",
    "engines": {
        "node": ">=18"
    },
    "scripts": {
        "build": "tsc",
        "build:watch": "tsc -w",
        "lint": "eslint . --ext .ts",
        "prepare": "npm run build",
        "pretest": "npm run lint",
        "start": "node dist/dlt_gateway.js"
    },
    "engineStrict": true,
    "author": "Javier Jose Diaz (CTTC)",
    "license": "Apache-2.0",
    "dependencies": {
        "@grpc/grpc-js": "^1.10.8",
        "@grpc/proto-loader": "^0.7.13",
        "@hyperledger/fabric-gateway": "~1.4.0",
        "dotenv": "^16.4.5",
        "grpc-tools": "^1.12.4",
        "protobufjs": "^7.3.0",
        "uuid": "^9.0.1"
    },
    "devDependencies": {
        "@tsconfig/node18": "^18.2.2",
        "@types/node": "^18.18.6",
        "@typescript-eslint/eslint-plugin": "^6.9.0",
        "@typescript-eslint/parser": "^6.9.0",
        "eslint": "^8.52.0",
        "typescript": "~5.2.2"
    }
}
